@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}

<link rel="stylesheet" href="~/css/Identity/Login.css" />

<div class="Login_BigContainer">

    <div class="LoginForm">

        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">

            <h1>Welcome back</h1>

            <div asp-validation-summary="ModelOnly" role="alert"></div>

            <div class="LoginFormItem">
                <label asp-for="Input.Email">Email</label>
                <input asp-for="Input.Email" autocomplete="off" AutoCompleteType="Disabled" aria-required="true" />
                <span asp-validation-for="Input.Email"></span>
            </div>
            <div class="LoginFormItem">
                <label asp-for="Input.Password">Password</label>
                <input asp-for="Input.Password" autocomplete="off" AutoCompleteType="Disabled" aria-required="true" />
                <span asp-validation-for="Input.Password"></span>
            </div>

            <div class="LoginFormItem">
                <label asp-for="Input.RememberMe">
                    <input asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
            <button type="submit">Log in</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
