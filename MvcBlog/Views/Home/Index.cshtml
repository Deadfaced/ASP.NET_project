@using Microsoft.AspNetCore.Identity
@using MvcBlog.Areas.Identity.Data

@inject SignInManager<MvcBlogUser> SignInManager
@inject UserManager<MvcBlogUser> UserManager

@model PostViewModel

@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/css/Home/Index.css " asp-append-version="true" />

<div class="allPage">

    <div class="container">

        <div class="homeImage"></div>

        <div class="exploreCities">
            <h1>Explore cities</h1>
            <div class="exploreCitiesImgs">

                <div class="exploreCitiesImgCard">
                    <a asp-controller="Posts" asp-action="searchByKeyword" asp-route-keyword="Tokyo">
                        <img src="~/images/tokyo.jpg" alt="Tokyo">
                        <p>Tokyo</p>
                    </a>
                </div>

                <div class="exploreCitiesImgCard">
                    <a asp-controller="Posts" asp-action="searchByKeyword" asp-route-keyword="Yokohama">
                        <img src="~/images/yokohama.jpg" alt="Yokohama">
                        <p>Yokohama</p>
                    </a>
                </div>

                <div class="exploreCitiesImgCard">
                    <a asp-controller="Posts" asp-action="searchByKeyword" asp-route-keyword="Osaka">
                        <img src="~/images/osaka.jpg" alt="Osaka">
                        <p>Osaka</p>
                    </a>
                </div>

                <div class="exploreCitiesImgCard">
                    <a asp-controller="Posts" asp-action="searchByKeyword" asp-route-keyword="Nagoya">
                        <img src="~/images/nagoya.jpg" alt="Nagoya">
                        <p>Nagoya</p>
                    </a>
                </div>

                <div class="exploreCitiesImgCard">
                    <a asp-controller="Posts" asp-action="searchByKeyword" asp-route-keyword="Sapporo">
                        <img src="~/images/sapporo.jpg" alt="Sapporo">
                        <p>Sapporo</p>
                    </a>
                </div>

                <div class="exploreCitiesImgCard">
                    <a asp-controller="Posts" asp-action="searchByKeyword" asp-route-keyword="Fukuoka">
                        <img src="~/images/fukuoka.jpg" alt="Fukuoka">
                        <p>Fukuoka</p>
                    </a>
                </div>

            </div>
        </div>

        <h1 style="margin-top: 5rem;">Latest Posts</h1>
        <div class="latestPosts">
            @await Component.InvokeAsync("LatestPosts")
        </div>

        <h1 style="margin-top: 5rem;">Most Liked Posts</h1>
        <div class="mostLiked">
            @await Component.InvokeAsync("MostLiked")
        </div>
    </div>

</div>

