@using Microsoft.AspNetCore.Identity
@using MvcBlog.Areas.Identity.Data

@inject SignInManager<MvcBlogUser> SignInManager
@inject UserManager<MvcBlogUser> UserManager

@{
    ViewData["Title"] = "Manage Users";
}

@model IEnumerable<MvcBlogUser>

<h2>Manage Users</h2>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>
                    <form method="post" asp-controller="Admin" asp-action="DeleteUser" asp-route-id="@user.Id">
                        <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete this user?');" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>