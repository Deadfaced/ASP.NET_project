@using Microsoft.AspNetCore.Identity
@using MvcBlog.Areas.Identity.Data

@inject SignInManager<MvcBlogUser> SignInManager
@inject UserManager<MvcBlogUser> UserManager

@{
    ViewData["Title"] = "Manage Users";
}

@model IEnumerable<MvcBlogUser>

<link rel="stylesheet" href="~/css/Admin/Manage.css " asp-append-version="true" />

<div class="ManagePage">

    <h2 class="ManageTitle">Manage Users</h2>

    <table class="ManageTable">
        <thead>
            <tr>
                <th class="ManageTableItem">Email</th>
                <th class="ManageTableItem">Actions</th>
            </tr>
        </thead>
        <tbody class="ManageUsers">
            @foreach (var user in Model)
            {
                <tr>
                    <td class="ManageTableItem">@user.Email</td>
                    <td class="ManageTableItem">
                        <form method="post" asp-controller="Admin" asp-action="DeleteUser" asp-route-id="@user.Id">
                            <input type="submit" value="Delete" class="delete-button"
                                onclick="return confirm('Are you sure you want to delete this user?');" />
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>